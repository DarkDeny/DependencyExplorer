<UserControl x:Class="DependencyExplorer.View.LicenseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Grid Visibility="{Binding FullLicenseVisibility}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="This product is licensed!"/>
            <TextBox Grid.Row="1" IsReadOnly="True" Text="{Binding LicenseText, Mode=OneWay}"/>
        </Grid>
    </Grid>
</UserControl>
